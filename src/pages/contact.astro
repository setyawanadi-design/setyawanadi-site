---
import Layout from "../layouts/Layout.astro";
---

<Layout title="F. â€” Contact">
    <main class="flex-1 px-4 md:px-12 py-12 flex justify-center w-full">
        <div
            class="w-full max-w-6xl grid grid-cols-1 md:grid-cols-2 gap-12 lg:gap-24 items-start pt-8 pb-12"
        >
            {/* Left Column: Form Section */}
            <div
                class="flex flex-col gap-10 bg-stone-50/50 dark:bg-stone-900/50 border border-stone-200 dark:border-stone-800 p-8 md:p-12 rounded"
            >
                <div class="flex flex-col gap-4">
                    <h1
                        class="text-stone-900 dark:text-white text-4xl md:text-5xl font-bold tracking-tight leading-tight"
                    >
                        Get in touch
                    </h1>
                    <p
                        class="text-stone-500 dark:text-stone-400 font-serif italic text-lg md:text-xl leading-relaxed"
                    >
                        Have an interesting project or just want to discuss
                        design systems? My inbox is always open. Fill out the
                        form below or drop me an email directly.
                    </p>
                </div>

                <form
                    class="flex flex-col gap-6"
                    action="mailto:hello@example.com"
                    method="POST"
                    enctype="text/plain"
                >
                    <div class="flex flex-col gap-2">
                        <label
                            for="name"
                            class="font-bold text-sm text-stone-900 dark:text-white uppercase tracking-widest"
                            >Name</label
                        >
                        <input
                            type="text"
                            id="name"
                            name="name"
                            required
                            class="w-full bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 text-stone-900 dark:text-white px-4 py-3 focus:outline-none focus:ring-2 focus:ring-primary/50 transition-shadow rounded"
                            placeholder="Your name"
                        />
                    </div>

                    <div class="flex flex-col gap-2">
                        <label
                            for="email"
                            class="font-bold text-sm text-stone-900 dark:text-white uppercase tracking-widest"
                            >Email</label
                        >
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            class="w-full bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 text-stone-900 dark:text-white px-4 py-3 focus:outline-none focus:ring-2 focus:ring-primary/50 transition-shadow rounded"
                            placeholder="you@example.com"
                        />
                    </div>

                    <div class="flex flex-col gap-2">
                        <label
                            for="message"
                            class="font-bold text-sm text-stone-900 dark:text-white uppercase tracking-widest"
                            >Message</label
                        >
                        <textarea
                            id="message"
                            name="message"
                            rows="6"
                            required
                            class="w-full bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 text-stone-900 dark:text-white px-4 py-3 focus:outline-none focus:ring-2 focus:ring-primary/50 transition-shadow resize-y rounded"
                            placeholder="Your message here..."></textarea>
                    </div>

                    <button
                        type="submit"
                        class="inline-flex items-center justify-center gap-2 text-sm font-bold bg-primary hover:bg-primary/90 text-white px-8 py-4 transition-colors shadow-sm rounded w-full md:w-auto self-start mt-4 uppercase tracking-wider"
                    >
                        Send Message
                    </button>
                </form>
            </div>

            {/* Right Column: Image Presentation */}
            <div class="w-full hidden md:block sticky top-32">
                <div
                    class="w-full bg-stone-100 dark:bg-stone-900 overflow-hidden border border-stone-200 dark:border-stone-800 aspect-[3/4] rounded"
                >
                    <img
                        src="https://images.unsplash.com/photo-1515549832467-8783363e19b6?q=80&w=1200&auto=format&fit=crop"
                        alt="Contact desk space"
                        class="w-full h-full object-cover grayscale opacity-80 hover:grayscale-0 hover:opacity-100 hover:scale-105 transition-all duration-700 ease-out"
                    />
                </div>

                {/* Decorative Elements */}
                <div class="mt-6 flex justify-between items-center px-2">
                    <span
                        class="font-mono text-xs text-stone-400 dark:text-stone-500 uppercase tracking-widest"
                    >
                        Send to: setyawanadi
                    </span>
                    <div class="flex gap-2">
                        <div
                            class="size-2 rounded-full bg-stone-300 dark:bg-stone-700"
                        >
                        </div>
                        <div
                            class="size-2 rounded-full bg-stone-300 dark:bg-stone-700"
                        >
                        </div>
                        <div
                            class="size-2 rounded-full bg-stone-300 dark:bg-stone-700"
                        >
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
